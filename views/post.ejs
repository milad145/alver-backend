    <meta property="al:android:url"
          content="alver://alver.com/p/<%= post._id %>/<%= post.title.replace(/ /g, '_') %>"/>
    <meta property="al:android:app_name" content="آلور"/>
    <meta property="al:android:package" content="com.alver"/>
    <meta property="al:web:url" content="https://alver.com"/>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/style/libs/Bootstrap-min-v4.0.0.css">
    <link rel="stylesheet" href="/style/libs/Bootstrap-min-v3.3.7.css">
    <link rel="stylesheet" href="/style/libs/fontawesome-all.min.css">
    <link rel="stylesheet" href="/style/font.css">
    <link rel="stylesheet" href="/style/style.css?v=1klasfas56d4f">

    <script src="/js/libs/jquery-slim.min.js"></script>
    <script src="/js/libs/popper.min.js"></script>
    <script src="/js/libs/jquery-3.2.1.min.js"></script>
    <script src="/js/libs/Bootstrap-min-v4.0.0.js"></script>
    <script src="/js/libs/Bootstrap-min-v3.3.7.js"></script>
    <script src="/js/libs/moment.min.js"></script>
    <script src="/js/script.js"></script>

    <title>اپلیکیشن آلور</title>
